<% if session[:current_user_id] != nil %>
  <div class="container">

          <div class="row">
            <div class="col-md-4 col-md-offset-4">
              <div class="sign-up">
                <% if flash[:alert] %>
                  <%= flash[:alert] %>
                <% end %> 
              </div>
            </div>
          </div>
          
          <div class="row centered-form">
          <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">Add New Ship</h4>
              </div>
              <div class="panel-body">
              <%= form_tag("/ship/new", method: "post") do %>
                <!-- Beginning of form -->
                  <div class="form-group">
                    <input type="number" name="imo_number" id="imo_number" class="form-control input-sm" placeholder="IMO Number" required>
                  </div>

                  <!-- Gross Tonne and Dead Weight -->
                  <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                      <div class="form-group">
                        <input type="number" name="gross_tonne" id="gross_tonne" class="form-control input-sm floatlabel" placeholder="Gross Tonne" required>
                      </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                      <div class="form-group">
                        <input type="number" name="dead_weight" id="dead_weight" class="form-control input-sm" placeholder="Dead Weight" required>
                      </div>
                    </div>
                  </div>
                  <!-- End of Gross Tonne and Dead Weight -->
                  
                  <div class="form-group">
                    <label for="ship_type" class="panel-title"><h4 class="panel-title">Ship Type</h4></label>
                    <select id="ship_type" name="ship_type" class="form-control input-sm floatlabel" required>
                      <option > Liquid Bulk</option>
                      <option > Dry Bulk </option>
                      <option > Containers </option>
                      <option > Roll on Roll </option>
                      <option > Others </option>
                    </select>
                  </div>
                  
                  
                  <!-- Submit Button -->
                  <%= submit_tag "Add Ship", class: "btn btn-info btn-block" %>
                  <!-- End of Submit Button -->
                <% end %>
                <!-- End of form -->
              </div>
            </div>
          </div>
        </div>
  </div>

<% else %>

  <h5>You must be logged in to add a cargo</h5>
  <%= link_to "Click to Login", controller: "sessions", action: "cargo_login" %>

<% end %>

<!-- End of Test -->




