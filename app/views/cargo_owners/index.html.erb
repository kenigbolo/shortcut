<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="sign-up">
          Registration Form
    </div>
  </div>
</div>

<!-- Begining of registration form -->
<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <%= form_tag("/register/ship-owner", method: "post") do %>      
      <%= label_tag(:username, "Username") %>
      <%= text_field_tag(:username) %>
      <br>
  
      <label for="password">Password</label>
      <input type="password" name="password" id="password" required>
      <br>

      <label for="repeat_password">Repeat Password</label>
      <input type="password" name="repeat_password" id="repeat_password" required>
      <br>
      
      <label for="first_name">First Name</label>
      <input type="text" name="first_name" id="first_name" required>
      <br>
      
      <label for="last_name">Last Name</label>
      <input type="text" name="last_name" id="last_name" required>
      <br>
      
      <label for="email">Email</label>
      <input type="email" name="email" id="email" required>
      <br>
      
      <label for="phone_number">Phone Number</label>
      <input type="tel" name="phone_number" id="phone_number" required>
      <br>
      
      <label for="country">Country of residence</label>
      <input type="text" name="country" id="country" required>
      <br>
      <br>
      <input type="submit" name="commit" value="Create my account" data-disable-with="Create my account">
    <% end %>
  </div>
</div>
<!-- End of form -->

<!-- Beginning of Footer -->
