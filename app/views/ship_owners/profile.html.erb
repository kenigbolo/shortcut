<%= @user.username %>

<% if @user.id == session[:current_user_id] %>
	<%= link_to "Add Ship", controller: "ships", action: "show", id: @user.id %>
<% end %>

<h5>Ships</h5>
<% if @ships != nil%>
	<% @ships.each do |ship| %>
		<p> From: <%= ship.present_port %> </p>
		<p> To: <%= ship.destination_port %> </p>
		<p> Gross Tonne: <%= ship.gross_tonne %> </p>
		<p> Dead Weight: <%= ship.dead_weight %> </p>
		<p> Date of Departure: <%= ship.depature_date %> </p>
		<button><%= link_to "Auction ship", controller: "bids", action: "edit", id: ship.id %></button>
		<br>
		<br>
	<% end %>
<% end %>
