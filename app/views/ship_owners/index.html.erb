<link rel="stylesheet" type="text/css" href="https://daks2k3a4ib2z.cloudfront.net/578741431c0e63b1517d03a6/css/kenigbolo-meya-stephen-s-trendy-site.webflow.2dba93c49.css">

<% if flash[:alert] %>
<%= flash[:alert] %>
<% end %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="sign-up">
          Registration Form
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-4 col-md-offset-4">
    
    <%= form_tag("/register/ship-owner", method: "post") do %>
      <%= label_tag(:username, "Username") %>
      <%= text_field_tag(:username) %>
      <br>
      <%= label_tag(:password, "Password") %>
      <%= text_field_tag(:password) %>
      <br>

      <label for="repeat_password">Repeat Password</label>
      <input type="password" name="repeat_password" id="repeat_password" required>
      <br>
      
      <label for="first_name">First Name</label>
      <input type="text" name="first_name" id="first_name" required>
      <br>
      
      <label for="last_name">Last Name</label>
      <input type="text" name="last_name" id="last_name" required>
      <br>
      
      <label for="email">Email</label>
      <input type="email" name="email" id="email" required>
      <br>
      
      <label for="phone_number">Phone Number</label>
      <input type="tel" name="phone_number" id="phone_number" required>
      <br>
      
      <label for="country">Country of residence</label>
      <input type="text" name="country" id="country" required>
      <br>
      
      <label for="company_name">Company Name</label>
      <input type="text" name="company_name" id="company_name" required>
      <br>
      
      <label for="company_address">Company Address</label>
      <input type="text" name="company_address" id="company_address" required>
      <br>
      <br>
      <%= submit_tag("Create my account") %>
    <% end %>

  </div>
</div>

<footer>
  <div class="center footer w-section" id="footer">
    <div class="w-container">
      <div class="footer-text">Copyright Shortcut Inc 2016</div>
    </div>
  </div>

  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script type="text/javascript" src="https://daks2k3a4ib2z.cloudfront.net/578741431c0e63b1517d03a6/js/webflow.30539563a.js"></script>
</footer>

