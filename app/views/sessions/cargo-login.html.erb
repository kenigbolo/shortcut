<div class="container">

        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <div class="sign-up">
              <% if flash[:alert] %>
                <%= flash[:alert] %>
              <% end %> 
            </div>
          </div>
        </div>
        
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">Existing User</h4>
            </div>
            <div class="panel-body">
            <!-- Beginning of form -->
	            <%= form_tag("/cargo-owner/login", method: "post") do %>
	             	<!-- Username -->
	                <div class="form-group">
	                  <input type="text" name="username" id="username" class="form-control input-sm" placeholder="Username" required>
	                </div>
	                <!-- Username -->

	                <!-- Password Details -->
	                <div class="form-group">
	                  <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password" required>
	                </div>
	                <!-- End of Password Details -->

	                <!-- Submit Button -->
	                <%= submit_tag "Login", class: "btn btn-info btn-block" %>
	                <!-- End of Submit Button -->

	              <% end %>
              <!-- End of form -->
            </div>
          </div>
        </div>
      </div>
</div>

