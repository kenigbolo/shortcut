<link rel="stylesheet" type="text/css" href="https://daks2k3a4ib2z.cloudfront.net/578741431c0e63b1517d03a6/css/kenigbolo-meya-stephen-s-trendy-site.webflow.2dba93c49.css">

<!-- Insert Particles.js -->
<%= stylesheet_link_tag 'style'%>
<div id="particles-js"></div>
<%= javascript_include_tag 'particles', 'app'%>
<!-- End of Particles.js -->

<!-- Beginning of Body -->
<% if session[:current_user_id] != nil %>

  <div class="container">

          <div class="row">
            <div class="col-md-4 col-md-offset-4">
              <div class="sign-up">
                <% if flash[:alert] %>
                  <%= flash[:alert] %>
                <% end %> 
              </div>
            </div>
          </div>
          
          <div class="row centered-form">
          <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">Add Cargo to MarketPlace</h4>
              </div>
              <div class="panel-body">

              <!-- Beginning of form -->
              <%= form_tag("/bid/edit/", method: "post") do %>

                  <div class="form-group">                    
                    <input type="text" name="description" id="description" class="form-control input-sm" placeholder="Description" required>
                  </div>

                  <div class="form-group">
                    <label for="end_date"><h6 class="panel-title">Bidding Deadline</h6></label>
                    <input type="date" name="end_date" id="end_date" class="form-control input-sm" placeholder="Bidding Deadline" required>
                  </div>

                  <!-- Hidden Cargo ID -->
                  <%= hidden_field_tag 'id', @cargo_id %>
                  <!-- End of Hidden Cargo ID -->

                  <!-- Submit Button -->
                  <%= submit_tag "Create Auction", class: "btn btn-info btn-block" %>
                  <!-- End of Submit Button -->
              <% end %>
              <!-- End of form -->
              </div>
            </div>
          </div>
        </div>
  </div>

<% else %>
  <%= flash[:alert] = "You must be logged in to add a bid" %>
  <br>
  <%= link_to "Click to Login", controller: "sessions", action: "cargo_login" %>
<% end %>
<!-- End of Body -->


<!-- Beginning of Footer -->
  <footer>
  <div class="center footer w-section" id="footer">
    <div class="w-container">
      <div class="footer-text">Copyright Shortcut Inc 2016</div>
    </div>
  </div>

  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script type="text/javascript" src="https://daks2k3a4ib2z.cloudfront.net/578741431c0e63b1517d03a6/js/webflow.30539563a.js"></script>
</footer>
